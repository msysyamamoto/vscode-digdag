{
    "name": "vscode-digdag",
    "displayName": "vscode-digdag",
    "description": "Digdag support for VSCode",
    "version": "0.3.7",
    "publisher": "msysyamamoto",
    "icon": "images/icon.png",
    "license": "SEE LICENSE IN LICENSE",
    "keywords": [
        "Digdag"
    ],
    "homepage": "https://github.com/msysyamamoto/vscode-digdag/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/msysyamamoto/vscode-digdag"
    },
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters"
    ],
    "contributes": {
        "languages": [
            {
                "id": "digdag",
                "aliases": [
                    "Digdag",
                    "digdag"
                ],
                "extensions": [
                    ".dig"
                ],
                "configuration": "./dig.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "digdag",
                "scopeName": "source.dig",
                "path": "./syntaxes/digdag.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Digdag configuration",
            "properties": {
                "digdag.codeCompletion.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable code completion"
                }
            }
        }
    },
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "prettier": "^2.5.1"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^12.12.1",
        "@types/prettier": "^2.4.2",
        "@types/vscode": "^1.46.0",
        "eslint": "^7.3.1",
        "typescript": "^3.9.5",
        "vscode-test": "^1.4.0"
    },
    "activationEvents": [
        "onLanguage:digdag"
    ]
}
